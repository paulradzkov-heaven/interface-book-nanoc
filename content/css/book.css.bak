html, body {color:#000000;  font-size:15px; margin:0px; padding:0px; 
            font-family: "Lucida Grande","Lucida Sans Unicode",Helvetica,Arial,Verdana,sans-serif;}
h1 {font-size:32px; line-height: 36px; margin: 90px 0 36px; font-weight:normal; letter-spacing:-0.04em;}
h2 {line-height: 18px; margin: 90px 0 36px; letter-spacing:-0.04em;}
h3 {line-height: 18px; margin: 90px 0 36px; letter-spacing:-0.01em;}
p {line-height:18px; margin: 18px 0px 0px;}
b {display:inline; margin-top:18px; line-height:18px;}
img {vertical-align:middle;}
i {line-height:18px;}
ul {line-height:18px;}
ul ul {padding-left:20px;}
small{font-style: italic;}
cite {line-height:18px;}
var {line-height:18px; margin:0px 0px 0px 0px;}  
a:link{color:#0066CC; text-decoration: none;}
a:hover{color:#1F1F1F; text-decoration: underline;}
a:visited{color:#7B3EFF; text-decoration: none;}
.toc a:link{color:#000; text-decoration: none;}
.toc a:visited{color:#666666; text-decoration: none;}
.toc a:hover{color:#0066CC; text-decoration: underline;}
table {margin:0px; padding:0px;}
table td, table th {border-bottom:1px solid #CCC;padding:5px;}
.header p {margin-right:40px;}
.property table {text-align:left; line-height:18px; margin:18px 0px 0px;}
caption {line-height:18px; margin:0px 0px 18px;}
.image {margin:29px 0px 0px; line-height:18px;}
.image  i {line-height:18px; margin:18px 0px 18px 0px;}
.locus {display:inline-block; margin-left:110%; margin-top: -118px; font-size:12px; width: 180px;}
.content {width: 550px; padding-top:72px;}
.page  {overflow:hidden; margin-top: 18px;}
.back a {float:left; display:inline; line-height:18px;}
.next a {float:right; display:inline; line-height:18px;}
section {
	-webkit-columns: 2;
	   -moz-columns: 2;
			columns: 2;
	-webkit-column-gap: 4em;
	   -moz-column-gap: 4em;
			column-gap: 4em;
}
/* blockquotes, cites, epigraphs */
blockquote {}
.epigraph {margin-left: 50%; padding: 0 0 36px;}
.epigraph blockquote {margin-left:0;}
.epigraph cite {text-align:right;display:block;}

figure {text-align:center;}
figure img {max-width:100%;}


/* layout */
.content-wrapper {margin:0 10%;}
.content-wrapper .content {}
.header {position:fixed;z-index:2;top:0;left:0;right:0;background:rgba(255,255,255,0.8);border-bottom: 1px solid #CCCCCC; padding:18px 15px 18px 20px;}
.header img {vertical-align:middle; margin-left:5px;}
.header p {display:inline;}
.header label {float:right; display:inline;}
.header .visit a {font-style: italic; color:#666666; text-decoration: none;}
.content {height: auto !important; min-height: 100%; position: relative;}
.footer {position:relative; overflow:hidden; border-top: 1px solid #CCCCCC; padding:18px 10px 18px 20px; 			margin-top:90px;}
.footer small {float:left; display:inline; line-height:18px;}
.footer label {float:right; display:inline;}
.footer img {vertical-align:middle; margin-left:5px;}
.footer small {font-style:normal;}
.debug {background: url(../img/baseline_18px.png) 0 0 ;}
/************/

/*index*/
.index h1 {font-size:40px;}
.index h2 {font-size:24px;}
.index ul {list-style-type: none; margin:0px; padding:0px;}
.index li {margin:36px 0px 18px 0px; line-height:18px;}
.index ul ul {list-style-type: none; margin:0px; padding-left:20px;}
.index ul li {font-weight:bold;}
.index ul ul li {font-size:12px; line-height: 18px; margin:0px; padding:0px; font-weight:normal;}
.index .name {padding:75px 125px 73px 205px;}
.index .name h1 {line-height:38px; margin-bottom:0px; margin:18px 0px 0px;letter-spacing:-0.08em;font-weight:					normal;}
.index .name h2 {line-height:18px; margin-bottom:0px; margin-top:15px;letter-spacing:-0.02em;font-weight:normal;}
.index .headpict {background: url(../img/header.gif) repeat-x center top; height:450px;}
.index .mark {float:left; font-size:10px; padding:372px 0px 0px 15px; margin-bottom:10px;}
.index .mark p {margin:0px;}
.annotation {overflow:hidden; padding:74px 285px 50px 134px;}
.ann-pict img {float:left; display:inline-block; margin:-10px 44px 0px 0px;}
div.ann-text {display:inline;} 
.ann-text p { line-height:18px; margin:0px 0px 18px 0px;}
.contents {padding:53px 20px 0px 205px; line-height:18px; border-top: 1px solid #CCCCCC;}
.contents img {vertical-align:middle;  margin-left:5px;}
.search-contents {overflow:hidden;}
.search-contents h2 {display:inline;}
.search-contents label {float:right; display:inline;}
/*************/

.biblio .content b {margin: 0;}
.biblio .content i {margin: 0; font-style:normal;}

.cap-letter {color: #CCCCCC;
    float: left;
    font-size: 3em;
    line-height: 1;
    margin: -0.15em 0 0 -1.3em;}
.hr-invisible {background:none;color:transparent;border:none;margin:36px 0 35px;padding:0;height:1px;}
.aindex a:link{color:#0066CC; text-decoration: none;}
.aindex a:hover{color:#1F1F1F; text-decoration: underline;}
.aindex a:visited{color:#7B3EFF; text-decoration: none;}

/* buttons */
.page .back, .page .next {position:fixed;top:200px;z-index:2;}
.page .back {left:0;}
.page .next {right:0;}

a.read-it-now,
a.download {display:inline-block;margin:0 10px 0 0;padding:10px 20px;border:1px solid #05587C;background:#0A73A0;font:bold 24px/24px "Lucida Grande","Lucida Sans Unicode",Helvetica,Arial,Verdana,sans-serif;letter-spacing:-0.08em;text-decoration:none;color:#FFF;text-shadow:-1px -1px 0 #05587C; 
	-webkit-border-radius:5px;
	   -moz-border-radius:5px;
			border-radius:5px;
}
a.download {font:bold 16px/16px "Lucida Grande","Lucida Sans Unicode",Helvetica,Arial,Verdana,sans-serif;}